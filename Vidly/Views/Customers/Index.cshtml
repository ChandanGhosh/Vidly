@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>Customers</h2>
<a asp-action="New" asp-controller="Customers" class="btn btn-primary">New</a>
@if (!Model.Any())
{
    <p>We don't have any customer yet.</p>
}
else
{
    <table class="table table-striped table-hover table-bordered ">
        <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id">
                        @customer.Name
                    </a>
                </td>
                <td>@customer.MembershipType.Name</td>
            </tr>
        }


        </tbody>
    </table>    
}
