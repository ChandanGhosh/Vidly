@model Vidly.ViewModels.MoviesFormViewModel

@{
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Save" asp-controller="Movies">
    <div class="form-group">
        <label asp-for="Movie.Name"> Name</label>
        <input type="text" class="form-control" asp-for="Movie.Name" placeholder="Movie name">
    </div>
    <div class="form-group">
        <label asp-for="Movie.ReleasedDate">Released date</label>
        <input type="text" asp-for="Movie.ReleasedDate" asp-format="{0:d MMM yyyy}" class="form-control" placeholder="1 Jan 2017">
    </div>
    
    <div class="form-group">
        <label asp-for="Movie.GenreId">Genres</label>
        <select class="form-control" asp-for="Movie.GenreId"
                asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
            <option>Select Genres</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Movie.Stock">Number in stock</label>
        <input type="text" asp-for="Movie.Stock"
               class="form-control" placeholder="Stock">
    </div>
    <input type="hidden" asp-for="Movie.Id"/>
    <button type="submit" class="btn btn-primary">Save</button>

</form>
