@model Movie

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleasedDate.ToLongDateString()</li>
    <li>Date Added: @Model.Created.ToLongDateString()</li>
    <li>Number in Stocks: @Model.Stock</li>
</ul>
